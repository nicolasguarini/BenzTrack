<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRefuelActivity"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_add_maintenance"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_title_maintenance"
        android:textAllCaps="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/lightgray"
        android:letterSpacing="0.16"
        android:textSize="12sp"
        android:layout_marginTop="22dp"/>

    <EditText
        android:id="@+id/etMaintTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/hint_title_maintenance"
        android:inputType="text"
        android:paddingStart="24dp"
        android:paddingEnd="4dp"
        android:autofillHints=""
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:letterSpacing="0.16"
        android:text="@string/label_date"
        android:textAllCaps="true"
        android:textColor="@color/lightgray"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etMaintDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/etInsDate"
        android:inputType="date"
        android:paddingStart="24dp"
        android:paddingEnd="4dp"
        android:autofillHints=""
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_total_spent"
        android:textAllCaps="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/lightgray"
        android:letterSpacing="0.16"
        android:textSize="12sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etMaintTotalSpent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/hint_insurance_price"
        android:inputType="numberDecimal"
        android:paddingStart="24dp"
        android:paddingEnd="4dp"
        android:autofillHints=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_optional_description"
        android:textAllCaps="true"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/lightgray"
        android:letterSpacing="0.16"
        android:textSize="12sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etMaintOptionalDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_textarea"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/hint_optional_description"
        android:inputType="text|textMultiLine"
        android:paddingStart="24dp"
        android:paddingEnd="4dp"
        android:paddingTop="12dp"
        android:textSize="17sp"
        android:autofillHints=""
        />

    <Button
        android:id="@+id/btnMaintRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/btn_registra"
        app:cornerRadius="100dp"
        android:layout_marginTop="42dp"/>
</LinearLayout>