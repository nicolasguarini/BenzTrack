<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCarFuelTypeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSelectFuelType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/gray_bg"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/select_model_fuel"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/diesel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/lightgray_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:text="diesel"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_baseline_local_gas_station_24"
            app:iconGravity="textTop"
            app:iconPadding="11dp"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gasoil"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/lightgray_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:includeFontPadding="true"
            android:text="Benzina"
            android:textSize="20sp"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_baseline_local_gas_station_24"
            app:iconGravity="textTop"
            app:iconPadding="11dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hybrid"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/lightgray_bg"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Ibrida"
            android:textSize="20sp"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_baseline_electric_car_24"
            app:iconGravity="textTop"
            app:iconPadding="11dp" />

        <Button
            android:id="@+id/fuelSelectedButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/btn_avanti"
            app:cornerRadius="100dp" />
    </LinearLayout>

</LinearLayout>